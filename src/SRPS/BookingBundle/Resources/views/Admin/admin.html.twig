{# src/SRPS/Resources/views/Admin/admin.html.twig #}

{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/srpsbooking/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
{% endblock stylesheets %}

{% block title %}SRPS Bookings Administration{% endblock title %}

{% block body %}
    <div class="row-fluid">
        <div class="span3">
            {% block sidebar %}{% endblock sidebar %}
        </div>
        <div class="span9">    
            {% block content %}{% endblock content %}
        </div>
    </div>
{% endblock body%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/srpsbooking/js/jquery-1.8.3.min.js') }}"></script>
    <script src="{{ asset('bundles/srpsbooking/jHtmlArea/scripts/jHtmlArea-0.7.5.min.js') }}"></script>
{% endblock javascripts %}