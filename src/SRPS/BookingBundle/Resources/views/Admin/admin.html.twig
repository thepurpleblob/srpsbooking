{# src/SRPS/Resources/views/Admin/admin.html.twig #}

{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet" media="screen"> 
    <link href="{{ asset('bundles/srpsbooking/jqueryui/css/ui-lightness/jquery-ui-1.10.0.custom.min.css') }}" rel="stylesheet" media="screen">   
    <link href="{{ asset('bundles/srpsbooking/css/booking.css') }}" rel="stylesheet" media="screen">    
{% endblock stylesheets %}

{% block title %}SRPS Bookings Administration{% endblock title %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
        <div class="col-md-3">
            {% block sidebar %}{% endblock sidebar %}
        </div>
        <div class="col-md-9">    
            {% block content %}{% endblock content %}
        </div>
        </div>
    </div>
{% endblock body%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/srpsbooking/js/jquery-1.8.3.min.js') }}"></script>
    <script src="{{ asset('bundles/srpsbooking/tinymce/jscripts/tiny_mce/tiny_mce.js') }}"></script>  
    <script src="{{ asset('bundles/srpsbooking/jqueryui/js/jquery-ui-1.10.0.custom.min.js') }}"></script>   
   
    <script type="text/javascript">
        tinyMCE.init({
            theme : "simple",
            mode : "textareas"
        });
        

    </script>    
{% endblock javascripts %}