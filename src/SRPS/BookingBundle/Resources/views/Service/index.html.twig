{% extends 'SRPSBookingBundle:Admin:admin.html.twig' %}

{% block content %}
    <h2>Service list</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Visible</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                <tr>
                    <td>{{ entity.code }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.visible }}</td>
                    <td>{% if entity.date %}{{ entity.date|date('d/m/Y') }}{% endif %}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-success" href="{{ path('admin_service_show', { 'id': entity.id }) }}">show</a>
                            <a class="btn btn-warning" href="{{ path('admin_service_edit', { 'id': entity.id }) }}">edit</a>
                        </div>
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>

        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('admin_service_new') }}">
                Create a new entry
            </a>
        </div>
{% endblock content %}