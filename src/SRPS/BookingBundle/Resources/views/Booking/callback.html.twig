{% extends 'SRPSBookingBundle:Booking:booking.html.twig' %}

{% block content %}
    <h2>SRPS Railtours Online Booking</h2>

    <h3 class="text-error">Transaction complete</h3>

    <p>
        Please find the details of your transaction. You should recieve an
        email shortly.
    </p>

    <p>
        Final timings and tickets will be sent <b>ONE WEEK</b> before the tour.
    </p>

    <dl class="dl-horizontal">
        <dt>Booking ref</dt>
        <dd>{{ purchase.bookingref }}</dd>

        <dt>Tour name</dt>
        <dd>{{ service.name }}</dd>

        <dt>Tour date</dt>
        <dd>{{ service.date | date('d/m/Y') }}</dd>

        <dt>Payment status</dt>
        <dd>{{ sage.StatusDetail }}</dd>

        <dt>Total price</dt>
        <dd>&pound;{{ purchase.payment | number_format(2) }}</dd>
    </dl>

    <div>
        <a class="btn btn-primary" href="http://www.srps.org/">
            Return to the SRPS site
        </a>
    </div>

{% endblock content %}