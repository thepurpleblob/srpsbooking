{# src/SRPS/Resources/views/Booking/booking.html.twig #}

{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/srpsbooking/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bundles/srpsbooking/jqueryui/css/ui-lightness/jquery-ui-1.10.0.custom.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bundles/srpsbooking/css/booking.css') }}" rel="stylesheet" media="screen">
{% endblock stylesheets %}

{% block title %}SRPS Railtours{% endblock title %}

{% block body %}
    <div class="row-fluid">
        <div class="span3">
            {% block sidebar %}
                <img src="{{ asset('bundles/srpsbooking/images/railtourh.png') }}" alt="Railtour Logo" />
            {% endblock sidebar %}            
        </div>
        <div class="span6">
            {% block content %}{% endblock content %}
        </div>
        <div class="span3">
            &nbsp;
        </div>
    </div>
{% endblock body%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/srpsbooking/js/jquery-1.8.3.min.js') }}"></script>
    <script src="{{ asset('bundles/srpsbooking/tinymce/jscripts/tiny_mce/tiny_mce.js') }}"></script>
    <script src="{{ asset('bundles/srpsbooking/jqueryui/js/jquery-ui-1.10.0.custom.min.js') }}"></script>

    <script type="text/javascript">
        tinyMCE.init({
            theme : "simple",
            mode : "textareas"
        });


    </script>
{% endblock javascripts %}