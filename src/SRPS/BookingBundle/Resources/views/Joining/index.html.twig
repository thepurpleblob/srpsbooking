{% extends 'SRPSBookingBundle:Admin:admin.html.twig' %}

{% block sidebar %}
    {% include 'SRPSBookingBundle:Admin:sidebar.html.twig' %}
{% endblock sidebar %}

{% block content %}
    <h2>Joining stations</h2>
    <h4>{{ service.name }}</h4>

    {% if not setup %}
        <div class="alert alert-block alert-error">
            There are no pricebands. You need to create at least one priceband (and
            at least one destination) first.
        </div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Station</th>
                    <th>CRS</th>
                    <th>Price band</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for joining in joinings %}
                    <tr>
                        <td>{{ joining.station }}</td>
                        <td><span class="badge">{{ joining.crs }}</span>
                        <td>{{ joining.pricebandname }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('admin_joining_edit', { 'serviceid': serviceid, 'joiningid': joining.id }) }}">
                                <i class="fa fa-edit"></i> Edit</a>
                            <a class="btn btn-danger" href="{{ path('admin_joining_delete', { 'joiningid': joining.id }) }}">
                                <i class="fa fa-trash-o"></i> Delete</a>
                        </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('admin_joining_new', { 'serviceid': service.id }) }}">
                <i class="fa fa-plus"></i> Add a new joining station
            </a>
        </div>
    {% endif %}
{% endblock content %}